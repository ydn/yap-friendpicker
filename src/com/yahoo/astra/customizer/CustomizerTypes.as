package com.yahoo.astra.customizer
{
	/**
	 * Collection of constants for types to be used by the Customizer class.
	 */
	public class CustomizerTypes
	{
		
		/**
		 * A constant representing the type <code>Number</code>
		 */
		public static const NUMBER:String = "number"; 
		
		/**
		 * A constant representing the type <code>uint</code>
		 */
		public static const	UINT:String = "uint";
		
		/**
		 * A constant representing the type <code>int</code>
		 */
		public static const	INT:String = "int";	
		
		/**
		 * A constant representing a color to be shown as type <code>uint</code>
		 */
		public static const COLOR:String = "color";		
		
		/**
		 * A constant representing the type <code>String</code>
		 */
		public static const	STRING:String = "string";
		
		/**
		 * A constant representing the type <code>Boolean</code>
		 */
		public static const	BOOLEAN:String = "boolean";	
		
		/**
		 * A constant representing an image file location to be show as type <code>String</code>
		 */
		public static const IMAGE:String = "image";

		/**
		 * A constant representing an swf file location to be show as type <code>String</code>
		 */		
		public static const SWF:String = "swf";
	
	}
}